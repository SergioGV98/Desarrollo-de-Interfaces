<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customer_list_clayoutCustomer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/cl_general_margin">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/customer_list_rvClientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/customer_list_tvempty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="La lista está vacía"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/customer_list_rvClientes"
        tools:layout_editor_absoluteX="4dp" />



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/customer_list_fltbtnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/cl_flbtnMargin"
        android:layout_marginBottom="@dimen/cl_flbtnMargin"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="#BA99F1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_input_add" />

</androidx.constraintlayout.widget.ConstraintLayout>