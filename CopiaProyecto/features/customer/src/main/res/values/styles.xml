<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="customer_creation_tietStyle">
        <item name="android:textColor">@color/cc_black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="customer_creation_tilStyle">
        <item name="android:textColorHint">@color/cc_predetermined_color</item>
        <item name="helperTextTextColor">@color/cc_color_tilHelper</item>
    </style>


    <style name="customer_creation_btnStyle">
        <item name="android:backgroundTint">@color/customer_color_seed</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="customer_list_tvTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cl_tvName</item>
    </style>
    <style name="customer_list_tvNormal">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/cl_predetermined_color</item>
    </style>

    <style name="customer_detail_tvTitle">
        <item name="android:fontFamily">@font/helvetica</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="customer_detail_tvDescription">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/helvetica</item>
    </style>

    <style name="cvCustomerCreationCorner_style" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/cvCustomerCreationCorner</item>
    </style>

    <style name="cvCustomerCreationCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">48dp</item>
        <item name="cornerSizeTopLeft">48dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="cd_style_ItemtvId">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/helvetica</item>
        <item name="android:background">@color/customer_color_cl_id</item>
    </style>

</resources>