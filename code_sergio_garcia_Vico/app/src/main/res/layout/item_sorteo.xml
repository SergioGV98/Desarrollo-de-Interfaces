<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_lottery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_primitiva" />

    <TextView
        android:id="@+id/tv_lottery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/league"
        android:text="@string/lottery_hint"
        app:layout_constraintStart_toEndOf="@+id/img_lottery"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/lottery_date_hint"
        android:fontFamily="@font/league"
        app:layout_constraintBottom_toBottomOf="@+id/tv_lottery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_lottery"
        app:layout_constraintTop_toTopOf="@+id/tv_lottery" />

    <TextView
        android:id="@+id/tv_combination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/tv_combination_hint"
        app:layout_constraintStart_toEndOf="@+id/img_lottery"
        app:layout_constraintTop_toBottomOf="@+id/tv_lottery" />

    <TextView
        android:id="@+id/tv_complementary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/tv_complementary_hint"
        app:layout_constraintBottom_toBottomOf="@+id/tv_combination"
        app:layout_constraintStart_toEndOf="@+id/tv_combination"
        app:layout_constraintTop_toTopOf="@+id/tv_combination" />

    <TextView
        android:id="@+id/tv_reinteger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/tv_reinteger_hint"
        app:layout_constraintBottom_toBottomOf="@+id/tv_complementary"
        app:layout_constraintStart_toEndOf="@+id/tv_complementary"
        app:layout_constraintTop_toTopOf="@+id/tv_complementary" />
</androidx.constraintlayout.widget.ConstraintLayout>