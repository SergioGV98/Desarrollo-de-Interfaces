<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_creation_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:hint="@string/item_creation_edName_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:startIconDrawable="@drawable/ic_action_cart" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_creation_etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:hint="@string/item_creation_edDescription_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_creation_etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/item_creation_tvItemList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="@string/item_creation_tvTypeItem_text" />

    <Spinner
        android:id="@+id/item_creation_spItemType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp" />

    <TextView
        android:id="@+id/item_creation_tvRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="@string/item_creation_tvRate_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="25dp">

        <EditText
            android:id="@+id/item_creation_etRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:inputType="numberDecimal"
            android:paddingBottom="16dp"
            android:textSize="16dp"/>

        <CheckBox
            android:id="@+id/item_creation_cbxTaxable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginHorizontal="50dp"
            android:textSize="16dp"
            android:text="@string/item_creation_chbxTaxable_text" />
    </LinearLayout>

    <Button
        android:id="@+id/item_creation_btnSave"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:layout_gravity="right"
        android:text="@string/item_creation_btnDone_text"
        android:textSize="18dp"
        tools:ignore="MissingConstraints" />

</LinearLayout>