<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/itemDetail_padding">

    <ImageView
        android:id="@+id/itemDetail_ivImgCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:src="@drawable/cart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemDetail_tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/itemDetail_padding"
        android:text="@string/itemDetail_tvNameText"
        android:textSize="@dimen/itemDetail_sizeTitles"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemDetail_ivImgCart" />

    <TextView
        android:id="@+id/itemDetail_tvContentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemDetail_tvContentNameText"
        android:textSize="@dimen/itemDetail_sizeSubTitles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemDetail_tvName" />

    <TextView
        android:id="@+id/itemDetail_tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/itemDetail_padding"
        android:text="@string/itemDetail_tvDescriptionText"
        android:textSize="@dimen/itemDetail_sizeTitles"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemDetail_tvContentName" />

    <TextView
        android:id="@+id/item_detail_tvContentDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemDetail_tvContentDescriptionText"
        android:textSize="@dimen/itemDetail_sizeSubTitles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemDetail_tvDescription" />

    <TextView
        android:id="@+id/item_detail_tvType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/itemDetail_padding"
        android:text="@string/itemDetail_tvTypeText"
        android:textSize="@dimen/itemDetail_sizeTitles"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_detail_tvContentDescription" />

    <TextView
        android:id="@+id/itemDetail_tvContentType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemDetail_tvContenTypeText"
        android:textSize="@dimen/itemDetail_sizeSubTitles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_detail_tvType" />

    <TextView
        android:id="@+id/itemDetail_tvRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/itemDetail_padding"
        android:text="@string/itemDetail_tvRateText"
        android:textSize="@dimen/itemDetail_sizeTitles"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemDetail_tvContentType" />

    <TextView
        android:id="@+id/item_detail_tvContentRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemDetail_tvContenRateText"
        android:textSize="@dimen/itemDetail_sizeSubTitles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemDetail_tvRate" />

    <TextView
        android:id="@+id/item_detail_tvTaxable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/itemDetail_padding"
        android:text="@string/itemDetail_tvTaxableText"
        android:textSize="@dimen/itemDetail_sizeTitles"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_detail_tvContentRate" />

    <TextView
        android:id="@+id/item_detail_tvContentTaxable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemDetail_tvContenTaxableText"
        android:textSize="@dimen/itemDetail_sizeSubTitles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_detail_tvTaxable" />

</androidx.constraintlayout.widget.ConstraintLayout>